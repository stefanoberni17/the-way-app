import { NextRequest, NextResponse } from 'next/server';

export async function middleware(req: NextRequest) {
  const pathname = req.nextUrl.pathname;
  
  // âœ… Pagine pubbliche
  const publicPaths = ['/login', '/register'];
  const isPublicPath = publicPaths.some(path => pathname.startsWith(path));
  
  // âœ… Prendi il token dalla cookie
  const token = req.cookies.get('sb-access-token')?.value || 
                req.cookies.get('sb-' + process.env.NEXT_PUBLIC_SUPABASE_URL?.split('//')[1]?.split('.')[0] + '-auth-token')?.value;
  
  console.log('ğŸ” Pathname:', pathname);
  console.log('ğŸ” Has token:', !!token);
  console.log('ğŸ” Is public path:', isPublicPath);
  
  // âœ… Se NON ha token e cerca pagina protetta â†’ login
  if (!token && !isPublicPath) {
    console.log('âŒ No token, redirecting to login');
    return NextResponse.redirect(new URL('/login', req.url));
  }
  
  // âœ… Se ha token e cerca login/register â†’ homepage
  if (token && isPublicPath) {
    console.log('âœ… Has token on public path, redirecting to home');
    return NextResponse.redirect(new URL('/', req.url));
  }
  
  console.log('âœ… Allowing request');
  return NextResponse.next();
}

export const config = {
  matcher: [
    '/((?!_next/static|_next/image|favicon.ico|.*\\.(?:svg|png|jpg|jpeg|gif|webp)$).*)',
  ],
};
